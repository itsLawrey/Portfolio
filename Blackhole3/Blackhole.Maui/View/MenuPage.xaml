<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Blackhole.Maui.View.MenuPage"
             Title="Menu">
    <VerticalStackLayout HorizontalOptions="StartAndExpand">
        <Button Text="New Game" Command="{Binding NewGamePageCommand}" />
        <Button Text="Save Game" Command="{Binding SaveGamePageCommand}"  />
        <Button Text="Load Game" Command="{Binding LoadGamePageCommand}" />
    </VerticalStackLayout>
</ContentPage>